{
  "openapi": "3.0.0",
  "info": {
    "title": "AppSec+ API",
    "version": "1.0.0",
    "description": "AppSec+ is an application security platform API for managing applications, scans, vulnerabilities,\npolicies, connectors, identity groups, roles, audit logs, and webhooks."
  },
  "servers": [
    {
      "url": "https://api.appsecplus.example.com",
      "description": "Production"
    }
  ],
  "tags": [
    {
      "name": "Core / Authentication",
      "description": "Obtain OAuth2 access tokens for AppSec+."
    },
    {
      "name": "Core / Roles",
      "description": "Role-based access control and permission sets."
    },
    {
      "name": "Core / Identity Groups",
      "description": "Logical groups of users and service accounts."
    },
    {
      "name": "Security / Applications",
      "description": "Register and manage applications under assessment."
    },
    {
      "name": "Security / Scans",
      "description": "Trigger and retrieve SAST/DAST/SCA/container scans."
    },
    {
      "name": "Security / Vulnerabilities",
      "description": "Query and update vulnerability findings."
    },
    {
      "name": "Security / Policies",
      "description": "Define and manage security evaluation policies."
    },
    {
      "name": "Integrations / Connectors",
      "description": "Integrations with CI/CD, Git, ticketing, and messaging tools."
    },
    {
      "name": "Integrations / Audit Logs",
      "description": "Export and inspect audit logs for compliance and forensics."
    },
    {
      "name": "Integrations / Webhooks",
      "description": "Receive event notifications via outbound webhooks."
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "details": {
            "type": "object"
          }
        }
      },
      "Application": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "criticality": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ]
          },
          "owner": {
            "type": "string"
          },
          "repoUrl": {
            "type": "string",
            "format": "uri"
          },
          "serviceUrl": {
            "type": "string",
            "format": "uri"
          },
          "language": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          }
        },
        "required": [
          "name"
        ]
      },
      "ScanSummary": {
        "type": "object",
        "properties": {
          "totalFindings": {
            "type": "integer",
            "example": 42
          },
          "critical": {
            "type": "integer",
            "example": 1
          },
          "high": {
            "type": "integer",
            "example": 5
          },
          "medium": {
            "type": "integer",
            "example": 10
          },
          "low": {
            "type": "integer",
            "example": 26
          }
        }
      },
      "Scan": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "applicationId": {
            "type": "string"
          },
          "scanType": {
            "type": "string",
            "enum": [
              "sast",
              "dast",
              "sca",
              "container"
            ]
          },
          "status": {
            "type": "string",
            "enum": [
              "queued",
              "running",
              "completed",
              "failed"
            ]
          },
          "triggeredBy": {
            "type": "string"
          },
          "startedAt": {
            "type": "string",
            "format": "date-time"
          },
          "completedAt": {
            "type": "string",
            "format": "date-time"
          },
          "summary": {
            "$ref": "#/components/schemas/ScanSummary"
          }
        },
        "required": [
          "applicationId",
          "scanType"
        ]
      },
      "Vulnerability": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "applicationId": {
            "type": "string"
          },
          "scanId": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ]
          },
          "cwe": {
            "type": "string"
          },
          "cve": {
            "type": "string"
          },
          "cvssScore": {
            "type": "number",
            "format": "float"
          },
          "status": {
            "type": "string",
            "enum": [
              "open",
              "in_progress",
              "resolved",
              "accepted"
            ]
          },
          "introducedIn": {
            "type": "string"
          },
          "remediation": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "PolicyConditions": {
        "type": "object",
        "properties": {
          "applicationIds": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "minSeverity": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ]
          }
        }
      },
      "Policy": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "action": {
            "type": "string",
            "enum": [
              "allow",
              "block",
              "monitor"
            ]
          },
          "conditions": {
            "$ref": "#/components/schemas/PolicyConditions"
          }
        },
        "required": [
          "name",
          "action"
        ]
      },
      "Connector": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "active",
              "inactive",
              "error"
            ]
          },
          "config": {
            "type": "object"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "name",
          "type"
        ]
      },
      "IdentityGroup": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "members": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "name"
        ]
      },
      "Role": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "permissions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "name",
          "permissions"
        ]
      },
      "AuditLogEntry": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "actor": {
            "type": "object"
          },
          "action": {
            "type": "string"
          },
          "resource": {
            "type": "object"
          },
          "metadata": {
            "type": "object"
          }
        }
      },
      "AuditLogExport": {
        "type": "object",
        "properties": {
          "exportId": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "processing",
              "completed",
              "failed"
            ]
          },
          "downloadUrl": {
            "type": "string",
            "format": "uri"
          },
          "expiresAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Webhook": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "events": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "active",
              "disabled",
              "error"
            ]
          },
          "secret": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "name",
          "url",
          "events",
          "secret"
        ]
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "paths": {
    "/oauth/token": {
      "post": {
        "tags": [
          "Core / Authentication"
        ],
        "summary": "Obtain OAuth2 access token",
        "description": "Use the client credentials grant to obtain a bearer token for AppSec+ APIs.",
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "grant_type": {
                    "type": "string",
                    "enum": [
                      "client_credentials"
                    ]
                  },
                  "client_id": {
                    "type": "string"
                  },
                  "client_secret": {
                    "type": "string"
                  }
                },
                "required": [
                  "grant_type",
                  "client_id",
                  "client_secret"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string"
                    },
                    "token_type": {
                      "type": "string",
                      "example": "Bearer"
                    },
                    "expires_in": {
                      "type": "integer",
                      "example": 3600
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "security": []
      }
    },
    "/applications": {
      "get": {
        "tags": [
          "Security / Applications"
        ],
        "summary": "List applications",
        "parameters": [
          {
            "name": "owner",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filter by owner team or user."
          },
          {
            "name": "criticality",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filter by criticality (low, medium, high, critical)."
          },
          {
            "name": "tag",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filter by tag key."
          }
        ],
        "responses": {
          "200": {
            "description": "List of applications.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Application"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "post": {
        "tags": [
          "Security / Applications"
        ],
        "summary": "Create application",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Application"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Application created.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Application"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/applications/{id}": {
      "get": {
        "tags": [
          "Security / Applications"
        ],
        "summary": "Get application",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Application details.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Application"
                }
              }
            }
          },
          "404": {
            "description": "Application not found"
          }
        }
      },
      "put": {
        "tags": [
          "Security / Applications"
        ],
        "summary": "Update application",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Application"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Application updated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Application"
                }
              }
            }
          },
          "404": {
            "description": "Application not found"
          }
        }
      },
      "delete": {
        "tags": [
          "Security / Applications"
        ],
        "summary": "Delete application",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Application deleted."
          }
        }
      }
    },
