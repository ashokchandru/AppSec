{
  "openapi": "3.0.0",
  "info": {
    "title": "AppSec+ API",
    "version": "1.0.0",
    "description": "Full OpenAPI specification for the AppSec+ application security platform. AppSec+ provides application inventory, policy management, connectors/agents, vulnerability scanning, and identity group mapping."
  },
  "servers": [
    {
      "url": "https://api.appsecplus.example.com",
      "description": "Production server"
    }
  ],
  "security": [
    {
      "oauth2": []
    }
  ],
  "components": {
    "securitySchemes": {
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "clientCredentials": {
            "tokenUrl": "/oauth/token",
            "scopes": {
              "admin": "Full administrative access",
              "read": "Read-only access"
            }
          }
        }
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "details": {
            "type": "object"
          }
        }
      },
      "Application": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "criticality": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ],
            "default": "medium"
          },
          "owner": {
            "type": "string"
          },
          "repoUrl": {
            "type": "string",
            "format": "uri"
          },
          "serviceUrl": {
            "type": "string",
            "format": "uri"
          },
          "language": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          }
        }
      },
      "Policy": {
        "type": "object",
        "required": [
          "name",
          "action"
        ],
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "action": {
            "type": "string",
            "enum": [
              "allow",
              "block",
              "monitor"
            ]
          },
          "conditions": {
            "type": "object",
            "properties": {
              "applicationIds": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "minSeverity": {
                "type": "string",
                "enum": [
                  "low",
                  "medium",
                  "high",
                  "critical"
                ]
              },
              "environments": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "dev",
                    "qa",
                    "stage",
                    "prod"
                  ]
                }
              }
            }
          },
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          }
        }
      },
      "Connector": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "agent",
              "scanner",
              "proxy"
            ],
            "default": "agent"
          },
          "status": {
            "type": "string",
            "enum": [
              "online",
              "offline",
              "degraded"
            ],
            "readOnly": true
          },
          "version": {
            "type": "string"
          },
          "location": {
            "type": "string"
          },
          "lastSeenAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          }
        }
      },
      "Scan": {
        "type": "object",
        "required": [
          "applicationId",
          "scanType"
        ],
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "applicationId": {
            "type": "string"
          },
          "scanType": {
            "type": "string",
            "enum": [
              "sast",
              "dast",
              "sca",
              "container"
            ]
          },
          "status": {
            "type": "string",
            "enum": [
              "queued",
              "running",
              "completed",
              "failed"
            ],
            "readOnly": true
          },
          "triggeredBy": {
            "type": "string"
          },
          "startedAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          },
          "completedAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          },
          "summary": {
            "type": "object",
            "properties": {
              "totalFindings": {
                "type": "integer"
              },
              "critical": {
                "type": "integer"
              },
              "high": {
                "type": "integer"
              },
              "medium": {
                "type": "integer"
              },
              "low": {
                "type": "integer"
              }
            }
          }
        }
      },
      "Vulnerability": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "applicationId": {
            "type": "string"
          },
          "scanId": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ]
          },
          "cwe": {
            "type": "string"
          },
          "cve": {
            "type": "string"
          },
          "cvssScore": {
            "type": "number",
            "format": "float"
          },
          "status": {
            "type": "string",
            "enum": [
              "open",
              "in_progress",
              "resolved",
              "accepted"
            ],
            "default": "open"
          },
          "introducedIn": {
            "type": "string"
          },
          "remediation": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          }
        }
      },
      "IdentityGroup": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "source": {
            "type": "string",
            "enum": [
              "local",
              "ldap",
              "saml",
              "oidc"
            ],
            "default": "local"
          },
          "externalId": {
            "type": "string"
          },
          "memberCount": {
            "type": "integer",
            "readOnly": true
          }
        }
      }
    }
  },
  "paths": {
    "/oauth/token": {
      "post": {
        "summary": "Obtain OAuth2 access token",
        "description": "Use client credentials to obtain an access token for the AppSec+ API.",
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "grant_type": {
                    "type": "string",
                    "enum": [
                      "client_credentials"
                    ]
                  },
                  "client_id": {
                    "type": "string"
                  },
                  "client_secret": {
                    "type": "string"
                  }
                },
                "required": [
                  "grant_type",
                  "client_id",
                  "client_secret"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Access token response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string"
                    },
                    "token_type": {
                      "type": "string",
                      "example": "Bearer"
                    },
                    "expires_in": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid client credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "security": []
      }
    },
