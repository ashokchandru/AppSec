    "/scans": {
      "get": {
        "summary": "List scans",
        "parameters": [
          {
            "name": "applicationId",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "queued",
                "running",
                "completed",
                "failed"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of scans",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Scan"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Trigger scan (generic)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "applicationId": {
                    "type": "string"
                  },
                  "scanType": {
                    "type": "string",
                    "enum": [
                      "sast",
                      "dast",
                      "sca",
                      "container"
                    ]
                  },
                  "triggeredBy": {
                    "type": "string"
                  }
                },
                "required": [
                  "applicationId",
                  "scanType"
                ]
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Scan queued",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Scan"
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
